{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "tests/**/*"]
}
