{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Kreyolopal reference documents",
  "$ref": "#/definitions/doc",
  "definitions": {
    "doc": {
      "oneOf": [
        {
          "$ref": "#/definitions/def_item"
        },
        {
          "$ref": "#/definitions/word"
        }
      ]
    },
    "a_quote": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "text": {
          "type": "string",
          "minLength": 1
        },
        "from": {
          "type": "string"
        },
        "author": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "text",
        "author"
      ],
      "title": "a_quote"
    },
    "doctype": {
      "type": "string",
      "enum": [
        "entry",
        "definition"
      ]
    },
    "word": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "entry": {
          "type": "string",
          "minLength": 1
        },
        "docType": {
          "const": "entry"
        },
        "variations": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "required": [
        "entry",
        "docType",
        "variations"
      ],
      "title": "word"
    },
    "def_item": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "entry": {
          "type": "string",
          "minLength": 1
        },
        "docType": {
          "const": "definition"
        },
        "definition_id": {
          "type": "string",
          "minLength": 1
        },
        "kreyol": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[a-z]{2}$"
        },
        "rank": {
          "type": "integer",
          "minimum": 0
        },
        "nature": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "adjectif",
              "adverbe",
              "article",
              "conjonction",
              "exclamation",
              "expression",
              "interjection",
              "locution",
              "nom",
              "nom propre",
              "nombre",
              "particule",
              "préfixe",
              "préposition",
              "pronom",
              "suffixe",
              "verbe"
            ]
          }
        },
        "meaning": {
          "$ref": "#/definitions/Meaning"
        },
        "usage": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "synonyms": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "confer": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "quotes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/a_quote"
          }
        }
      },
      "required": [
        "entry",
        "docType",
        "definition_id",
        "kreyol",
        "rank",
        "meaning",
        "nature"
      ],
      "title": "def_item"
    },
    "Meaning": {
      "type": "object",
      "additionalProperties": true,
      "minProperties": 1,
      "propertyNames": {
        "pattern": "^[a-z]{2}$"
      },
      "patternProperties": {
        ".+": {
          "type": "string"
        }
      },
      "title": "Meaning"
    }
  }
}