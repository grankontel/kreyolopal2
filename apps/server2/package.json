{
  "name": "server2",
  "version": "1.1.0",
  "description": "backend server for kreyolopal services",
  "author": "",
  "license": "ISC",
  "main": "src/server.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "NODE_ENV='production' node ./build/server.js",
    "build": "NODE_ENV='production' node ./build.js",
    "build2": "tsc --build ",
    "drizzle:generate": "drizzle-kit generate:pg --config ./src/drizzle.config.ts",
		"drizzle:push": "drizzle-kit push:pg --config ./src/drizzle.config.ts",
    "migrate": "ts-node ./drizzle.ts",
    "clean": "tsc --build --clean && rm -rf ./build",
    "prettier": "prettier ./src --write",
    "lint": "eslint . --ext .ts"
  },
  "imports": {
    "#lib/*": "./src/lib/*.ts",
    "#services/*": "./src/services/*.ts",
    "#utils/*": "./src/utils/*.ts",
    "#domain/*": "./src/domain/*.ts",
    "#config": "./src/config.ts"
  },
  "peerDependencies": {
    "@node-rs/argon2": "^1",
    "@node-rs/bcrypt": "^1",
    "uglify-js": "^3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.509.0",
    "@hono/node-server": "^1.9.1",
    "@hono/zod-validator": "^0.2.1",
    "@kreyolopal/domain": "*",
    "@kreyolopal/mails": "*",
    "@lucia-auth/adapter-postgresql": "^3.1.2",
    "@sentry/node": "^7.113.0",
    "ajv": "^8.12.0",
    "bluebird": "^3.7.2",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.30.10",
    "hono": "^4.2.2",
    "id128": "^1.6.6",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.2.0",
    "lucia": "^3.1.1",
    "mongodb": "^6.5.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "oslo": "^1.2.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sha3": "^2.1.4",
    "typo-js": "^1.2.3",
    "uglify-js": "^3",
    "validator": "^13.9.0",
    "winston": "^3.13.0",
    "winston-slack-webhook-transport": "^2.3.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.42",
    "@types/node": "^20",
    "@types/node-fetch": "^2.6.3",
    "@types/pg": "^8.10.9",
    "@types/typo-js": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "drizzle-kit": "^0.20.17",
    "esbuild": "^0.20.2",
    "esbuild-plugin-replace": "^1.3.0",
    "prettier": "3.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
