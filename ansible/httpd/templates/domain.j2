server {
    listen                  443 ssl http2;
    listen                  [::]:443 ssl http2;
    server_name             {{ subdomain }};

    # SSL
    {%if self_signed == true %}
    ssl_certificate /etc/ssl/certs/{{ subdomain }}.crt;
    ssl_certificate_key /etc/ssl/private/{{ subdomain }}.pem;
    {% else %}
    include                 /etc/nginx/nginxconfig.io/letsencrypt.conf;
    ssl_certificate         /etc/letsencrypt/live/{{ subdomain }}/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/{{ subdomain }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ subdomain }}/chain.pem;
    {% endif %}
    include                 /etc/nginx/nginxconfig.io/ssl.conf;

    # security
    include                 /etc/nginx/nginxconfig.io/security.conf;

    # logging
    access_log              /var/log/nginx/access-{{ subdomain }}.log combined buffer=512k flush=1m;
    error_log               /var/log/nginx/error-{{ subdomain }}.log warn;

    # reverse proxy
    location / {
        proxy_pass            http://127.0.0.1:{{ domainport}};
        proxy_set_header Host $host;
        include               /etc/nginx/nginxconfig.io/proxy.conf;
    }

    # additional config
    include nginxconfig.io/general.conf;
}


# HTTP redirect
server {
    listen      80;
    listen      [::]:80;
    server_name {{ subdomain }};

    {%if not self_signed == true %}
    include     /etc/nginx/nginxconfig.io/letsencrypt.conf;
    {% endif %}

    {%if listen_http == true %}
    # reverse proxy
    location / {
        proxy_pass            http://127.0.0.1:{{ domainport }};
        proxy_set_header Host $host;
        include               /etc/nginx/nginxconfig.io/proxy.conf;
    }

#    location / {
#        return 301 https://{{ subdomain }}$request_uri;
#    }
    {%else %}
    location / {
        return 301 https://{{ subdomain }}$request_uri;
    }
    {% endif %}

}