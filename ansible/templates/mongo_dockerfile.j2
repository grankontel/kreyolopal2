# dockerfile for patching

# replace these:
#  mongodb_version_min: '7.0'
#  mongodb_user_id: '1200'

FROM mongo:{{ mongodb_version_min }}

RUN mkdir -p /data/keys
VOLUME /data/keys
COPY --chown={{ ansible_effective_user_id}}:{{ ansible_effective_group_id}} --chmod=400 ./keys/keyFile.key /data/keys/keyFile.key
